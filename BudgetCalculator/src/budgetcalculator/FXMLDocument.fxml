<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Text?>

<GridPane prefHeight="200" prefWidth="320" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="budgetcalculator.FXMLDocumentController"
          alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
    
        <Label text="Budget Calculator" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>  
       
        <Label text="Monthly Income: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    
        <Label text="Monthly Rent: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
        <Label text="Utillities: " GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        
        <Label text="Groceries: " GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="7"/>
       
        <Label text="Travel: " GridPane.columnIndex="0" GridPane.rowIndex="9"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="9"/>

        <Label text="Debts" GridPane.columnIndex="0" GridPane.rowIndex="11"/>  
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="11"/>
        
        <HBox spacing="10" alignment="bottom_right"
            GridPane.columnIndex="1" GridPane.rowIndex="12">
            <Button text = "Calculate"
            onAction="#handlecalculationButtonAction"/>
        </HBox>
            
        <Text fx:id="actiontarget"
            GridPane.columnIndex="0" GridPane.columnSpan="2"
            GridPane.halignment="RIGHT" GridPane.rowIndex="13"/>
        
        
        
</GridPane>
        

